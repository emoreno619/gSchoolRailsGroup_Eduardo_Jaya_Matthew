
<div class="col-sm-offset-3">
  <div class="col-sm-7">
    <div class="well">
      <h2>Reset password</h2><br>
      <%= form_tag resets_path do%>
      <div class="form-group">
        <%= label_tag :email, nil, class:"control-label" %>
        <%= email_field_tag :email, params[:email], class:"form-control" %>
      </div>
        <%= submit_tag "Reset Password", class:"btn btn-block btn-success text-center" %>
      <% end %>
    </div>
  </div>
</div>