
<div class="col-sm-offset-3">
  <div class="col-sm-7">
    <div class="well">
      <h1>Login</h1>
      <%= form_tag login_path do %>
        <div class="form-group">
          <%= label_tag :email, nil, class:"control-label" %>
          <%= text_field_tag :email, params[:email], autofocus: true, class:"form-control" %>
        </div>

        <div class="form-group">
          <%= label_tag :password, class:"control-label" %>
          <%= password_field_tag :password, params[:password], class:"form-control" %>
        </div>

        <%= submit_tag "Log in", id:"submit-user", class:"btn btn-block btn-primary" %>
      <% end %>
      <%= link_to "Don't have an account? Sign up here", signup_path %>
    </div>
  </div>
</div>